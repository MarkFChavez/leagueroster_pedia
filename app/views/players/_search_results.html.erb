<div id="search-results" class="absolute top-full left-0 right-0 mt-2 bg-gray-800 border border-gold-400 rounded-lg shadow-2xl max-h-96 overflow-y-auto z-50">
  <% if players.any? %>
    <div class="divide-y divide-gray-700">
      <% players.each do |player| %>
        <%= link_to team_path(player.team), class: "block px-4 py-3 hover:bg-gray-700 transition-colors duration-150" do %>
          <div class="flex items-center justify-between">
            <div class="flex items-center flex-1">
              <%= player_image_tag(player, size: 'small', css_class: 'mr-3 flex-shrink-0') %>
              <div class="flex-1 min-w-0">
                <div class="font-semibold text-gold-400 text-lg truncate"><%= player.ign %></div>
                <div class="text-sm text-gray-400">
                  <span class="text-blue-400"><%= player.team.short_name %></span>
                  <% if player.role.present? %>
                    <span class="mx-2">â€¢</span>
                    <span class="text-gray-300"><%= player.role %></span>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="ml-4 flex-shrink-0">
              <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% elsif query.present? %>
    <div class="px-4 py-8 text-center text-gray-400">
      <svg class="w-12 h-12 mx-auto mb-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
      <p class="text-sm">No players found for "<%= query %>"</p>
    </div>
  <% end %>
</div>
