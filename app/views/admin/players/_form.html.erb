<%= form_with(model: [:admin, player], class: "space-y-6") do |form| %>
  <% if player.errors.any? %>
    <div class="bg-red-900/30 border border-red-700/50 rounded-lg p-4 mb-6">
      <h3 class="text-red-400 font-semibold mb-2"><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h3>
      <ul class="list-disc list-inside text-red-300 space-y-1">
        <% player.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :team_id, "Team", class: "block text-sm font-semibold text-purple-400 mb-2" %>
    <%= form.collection_select :team_id, @teams, :id, :id, { prompt: "Select a team" }, class: "w-full px-4 py-3 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
  </div>

  <div>
    <%= form.label :ign, "IGN (In-Game Name)", class: "block text-sm font-semibold text-purple-400 mb-2" %>
    <%= form.text_field :ign, class: "w-full px-4 py-3 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent", placeholder: "e.g., Faker" %>
  </div>

  <div>
    <%= form.label :role, class: "block text-sm font-semibold text-purple-400 mb-2" %>
    <%= form.select :role, ["Top", "Jungle", "Mid", "ADC", "Support"], { prompt: "Select a role" }, class: "w-full px-4 py-3 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
  </div>

  <div class="flex gap-3 pt-4">
    <%= form.submit class: "bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors cursor-pointer" %>
    <%= link_to "Cancel", admin_players_path, class: "bg-gray-700 hover:bg-gray-600 text-white font-semibold py-3 px-6 rounded-lg transition-colors" %>
  </div>
<% end %>
