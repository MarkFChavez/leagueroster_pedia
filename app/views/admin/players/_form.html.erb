<%= form_with(model: [:admin, player], class: "space-y-6") do |form| %>
  <% if player.errors.any? %>
    <div class="bg-red-900/30 border border-red-700/50 rounded-lg p-4 mb-6">
      <h3 class="text-red-400 font-semibold mb-2"><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h3>
      <ul class="list-disc list-inside text-red-300 space-y-1">
        <% player.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :team_id, "Team", class: "block text-sm font-semibold text-blue-400 mb-2" %>
    <%= form.collection_select :team_id, Team.includes(:team_source).order("team_sources.short_name"), :id, ->(team) { team.team_source.short_name }, { prompt: "Select a team" }, class: "w-full px-4 py-3 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-700 focus:border-transparent" %>
    <p class="text-gray-500 text-sm mt-1">The team this player belongs to</p>
  </div>

  <div>
    <%= form.label :ign, "IGN (In-Game Name)", class: "block text-sm font-semibold text-blue-400 mb-2" %>
    <%= form.text_field :ign, class: "w-full px-4 py-3 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-700 focus:border-transparent", placeholder: "e.g., Faker" %>
  </div>

  <div>
    <%= form.label :name, "Full Name", class: "block text-sm font-semibold text-blue-400 mb-2" %>
    <%= form.text_field :name, class: "w-full px-4 py-3 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-700 focus:border-transparent", placeholder: "e.g., Lee Sang-hyeok" %>
  </div>

  <div>
    <%= form.label :role, class: "block text-sm font-semibold text-blue-400 mb-2" %>
    <%= form.text_field :role, class: "w-full px-4 py-3 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-700 focus:border-transparent", placeholder: "e.g., Mid, Top, Jungle, Bot, Support" %>
  </div>

  <div>
    <%= form.label :contract_ends, class: "block text-sm font-semibold text-blue-400 mb-2" %>
    <%= form.date_field :contract_ends, class: "w-full px-4 py-3 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-700 focus:border-transparent" %>
    <p class="text-gray-500 text-sm mt-1">When the player's contract expires</p>
  </div>

  <div>
    <%= form.label :date_joined, class: "block text-sm font-semibold text-blue-400 mb-2" %>
    <%= form.date_field :date_joined, class: "w-full px-4 py-3 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-700 focus:border-transparent" %>
    <p class="text-gray-500 text-sm mt-1">When the player joined the team</p>
  </div>

  <div class="flex gap-3 pt-4">
    <%= form.submit class: "bg-blue-800 hover:bg-blue-900 text-white font-semibold py-3 px-6 rounded-lg transition-colors cursor-pointer" %>
    <%= link_to "Cancel", admin_players_path, class: "bg-gray-700 hover:bg-gray-600 text-white font-semibold py-3 px-6 rounded-lg transition-colors" %>
  </div>
<% end %>
