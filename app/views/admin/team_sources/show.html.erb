<div class="animate-[fadeIn_0.8s_ease-out]">
  <!-- Header Section -->
  <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-6 mb-6">
    <div class="flex justify-between items-center">
      <h2 class="text-3xl font-bold">
        <span class="bg-gradient-to-r from-purple-400 to-purple-300 bg-clip-text text-transparent">
          <%= @team_source.short_name %>
        </span>
      </h2>
      <div class="flex gap-3">
        <%= link_to "Edit", edit_admin_team_source_path(@team_source), class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-5 rounded-lg transition-colors" %>
        <%= button_to "Delete", admin_team_source_path(@team_source), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this team source?" }, class: "bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-5 rounded-lg transition-colors" %>
      </div>
    </div>
  </div>

  <!-- Details Section -->
  <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-6 mb-6">
    <div class="space-y-4">
      <div>
        <label class="block text-sm font-semibold text-purple-400 mb-1">Short Name</label>
        <p class="text-gray-300 text-lg"><%= @team_source.short_name %></p>
      </div>

      <div>
        <label class="block text-sm font-semibold text-purple-400 mb-1">Long Name</label>
        <p class="text-gray-300 text-lg"><%= @team_source.long_name %></p>
      </div>

      <div>
        <label class="block text-sm font-semibold text-purple-400 mb-1">External Team URL</label>
        <% if @team_source.external_team_url.present? %>
          <%= link_to @team_source.external_team_url, @team_source.external_team_url, target: "_blank", class: "text-purple-400 hover:text-purple-300 underline text-lg" %>
        <% else %>
          <p class="text-gray-600 text-lg">Not set</p>
        <% end %>
      </div>

      <div>
        <label class="block text-sm font-semibold text-purple-400 mb-1">Last Synced At</label>
        <% if @team_source.last_synced_at.present? %>
          <p class="text-gray-300 text-lg">
            <%= @team_source.last_synced_at.strftime("%B %d, %Y at %I:%M %p") %>
            <span class="text-gray-500 text-sm">(<%= time_ago_in_words(@team_source.last_synced_at) %> ago)</span>
          </p>
        <% else %>
          <p class="text-gray-600 text-lg">Never synced</p>
        <% end %>
      </div>

      <div>
        <label class="block text-sm font-semibold text-purple-400 mb-1">Created At</label>
        <p class="text-gray-300"><%= @team_source.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>

      <div>
        <label class="block text-sm font-semibold text-purple-400 mb-1">Updated At</label>
        <p class="text-gray-300"><%= @team_source.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>
    </div>
  </div>

  <!-- Back Link -->
  <div>
    <%= link_to "â† Back to Team Sources", admin_team_sources_path, class: "text-purple-400 hover:text-purple-300 font-medium" %>
  </div>
</div>
