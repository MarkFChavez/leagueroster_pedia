<%= form_with(model: [:admin, team_source], class: "space-y-6") do |form| %>
  <% if team_source.errors.any? %>
    <div class="bg-red-900/30 border border-red-700/50 rounded-lg p-4 mb-6">
      <h3 class="text-red-400 font-semibold mb-2"><%= pluralize(team_source.errors.count, "error") %> prohibited this team source from being saved:</h3>
      <ul class="list-disc list-inside text-red-300 space-y-1">
        <% team_source.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :short_name, class: "block text-sm font-semibold text-blue-400 mb-2" %>
    <%= form.text_field :short_name, class: "w-full px-4 py-3 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-700 focus:border-transparent", placeholder: "e.g., leaguepedia" %>
  </div>

  <div>
    <%= form.label :long_name, class: "block text-sm font-semibold text-blue-400 mb-2" %>
    <%= form.text_field :long_name, class: "w-full px-4 py-3 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-700 focus:border-transparent", placeholder: "e.g., Leaguepedia Wiki" %>
  </div>

  <div>
    <%= form.label :external_team_url, class: "block text-sm font-semibold text-blue-400 mb-2" %>
    <%= form.url_field :external_team_url, class: "w-full px-4 py-3 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-700 focus:border-transparent", placeholder: "https://example.com/teams" %>
  </div>

  <div>
    <%= form.label :last_synced_at, class: "block text-sm font-semibold text-blue-400 mb-2" %>
    <%= form.datetime_field :last_synced_at, class: "w-full px-4 py-3 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-700 focus:border-transparent" %>
    <p class="text-gray-500 text-sm mt-1">Leave empty if never synced</p>
  </div>

  <div class="flex gap-3 pt-4">
    <%= form.submit class: "bg-blue-800 hover:bg-blue-900 text-white font-semibold py-3 px-6 rounded-lg transition-colors cursor-pointer" %>
    <%= link_to "Cancel", admin_team_sources_path, class: "bg-gray-700 hover:bg-gray-600 text-white font-semibold py-3 px-6 rounded-lg transition-colors" %>
  </div>
<% end %>
