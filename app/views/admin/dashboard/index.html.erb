<div>
  <!-- Welcome Section -->
  <div class="bg-white shadow-sm border border-gray-200 rounded-lg p-8 mb-8">
    <h2 class="text-3xl font-bold mb-3 text-gray-900">
      Welcome to the Admin Dashboard
    </h2>
    <p class="text-gray-600 text-lg">
      Manage your League of Legends professional teams and roster database.
    </p>
  </div>

  <!-- Statistics Section -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    <!-- Teams Card -->
    <%= link_to admin_teams_path, class: "group block" do %>
      <div class="bg-white shadow-sm border border-gray-200 hover:border-yellow-400 hover:shadow-md rounded-lg p-6 transition-all duration-200">
        <div class="flex items-center justify-between mb-4">
          <div class="bg-yellow-50 rounded-lg p-3">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
        </div>
        <div class="text-4xl font-bold text-gray-900 mb-2"><%= @teams_count %></div>
        <div class="text-gray-600 text-sm font-medium uppercase tracking-wider">Teams</div>
      </div>
    <% end %>

    <!-- Players Card -->
    <%= link_to admin_players_path, class: "group block" do %>
      <div class="bg-white shadow-sm border border-gray-200 hover:border-yellow-400 hover:shadow-md rounded-lg p-6 transition-all duration-200">
        <div class="flex items-center justify-between mb-4">
          <div class="bg-yellow-50 rounded-lg p-3">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
        </div>
        <div class="text-4xl font-bold text-gray-900 mb-2"><%= @players_count %></div>
        <div class="text-gray-600 text-sm font-medium uppercase tracking-wider">Players</div>
      </div>
    <% end %>

    <!-- Last Sync Card -->
    <div class="bg-white shadow-sm border border-gray-200 rounded-lg p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="bg-yellow-50 rounded-lg p-3">
          <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
        </div>
      </div>
      <% if @last_synced %>
        <div class="text-lg font-bold text-gray-900 mb-1"><%= @last_synced.short_name %></div>
        <div class="text-gray-600 text-sm"><%= time_ago_in_words(@last_synced.last_synced_at) %> ago</div>
      <% else %>
        <div class="text-lg font-bold text-gray-400 mb-1">No syncs yet</div>
        <div class="text-gray-500 text-sm">Run your first sync</div>
      <% end %>
      <div class="text-gray-600 text-xs font-medium uppercase tracking-wider mt-2">Last Sync</div>
    </div>
  </div>
</div>
