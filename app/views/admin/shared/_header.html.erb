<header class="mb-8 sm:mb-12 animate-[fadeInUp_0.6s_ease-out] relative">
  <!-- Admin Header -->
  <div class="flex items-center justify-between mb-8">
    <!-- Left: Logo/Title -->
    <div class="flex-1">
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-black tracking-tight uppercase">
        <span class="bg-gradient-to-r from-purple-400 via-purple-300 to-purple-400 bg-clip-text text-transparent drop-shadow-[0_0_25px_rgba(168,85,247,0.8)] animate-[glowPulse_2s_ease-in-out_infinite]">
          Admin Panel
        </span>
      </h1>
      <p class="text-gray-400 text-sm sm:text-base font-medium uppercase tracking-wider mt-1">
        League Rosters Management
      </p>
    </div>

    <!-- Right: Navigation/Actions -->
    <div class="flex items-center gap-4">
      <%= link_to admin_team_sources_path, class: "group flex items-center gap-2 px-4 py-2 bg-gray-800/50 hover:bg-gray-700/50 border border-gray-700 hover:border-purple-500/50 rounded-lg transition-all duration-200" do %>
        <svg class="w-5 h-5 text-gray-400 group-hover:text-purple-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
        </svg>
        <span class="text-sm font-medium text-gray-300 group-hover:text-white hidden sm:inline">Team Sources</span>
      <% end %>
      <%= link_to admin_teams_path, class: "group flex items-center gap-2 px-4 py-2 bg-gray-800/50 hover:bg-gray-700/50 border border-gray-700 hover:border-purple-500/50 rounded-lg transition-all duration-200" do %>
        <svg class="w-5 h-5 text-gray-400 group-hover:text-purple-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <span class="text-sm font-medium text-gray-300 group-hover:text-white hidden sm:inline">Teams</span>
      <% end %>
      <%= link_to root_path, class: "group flex items-center gap-2 px-4 py-2 bg-gray-800/50 hover:bg-gray-700/50 border border-gray-700 hover:border-purple-500/50 rounded-lg transition-all duration-200" do %>
        <svg class="w-5 h-5 text-gray-400 group-hover:text-purple-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
        </svg>
        <span class="text-sm font-medium text-gray-300 group-hover:text-white hidden sm:inline">View Site</span>
      <% end %>
    </div>
  </div>

  <!-- Decorative glow line -->
  <div class="flex justify-start">
    <div class="h-1 w-full max-w-xs bg-gradient-to-r from-purple-500 via-purple-400 to-transparent shadow-[0_0_20px_rgba(168,85,247,0.6)] rounded-full"></div>
  </div>
</header>
