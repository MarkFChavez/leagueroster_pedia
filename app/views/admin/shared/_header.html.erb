<header class="bg-white border-b border-gray-200 mb-8">
  <div class="px-4 sm:px-6 lg:px-8 py-4">
    <div class="flex items-center justify-between">
      <!-- Left: Logo/Title -->
      <div class="flex-1">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">
          <span class="text-yellow-600">Admin</span> Panel
        </h1>
        <p class="text-gray-500 text-sm font-medium mt-0.5">
          League Rosters Management
        </p>
      </div>

      <!-- Right: Navigation -->
      <nav class="flex items-center gap-2">
        <% is_team_sources_active = controller_name == "team_sources" %>
        <%= link_to admin_team_sources_path, class: "group flex items-center gap-2 px-3 py-2 #{is_team_sources_active ? 'bg-yellow-50 border-yellow-600 text-yellow-700' : 'bg-white border-gray-300 text-gray-700'} hover:bg-yellow-50 hover:border-yellow-400 hover:text-yellow-700 border rounded-lg transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
          </svg>
          <span class="text-sm font-medium hidden sm:inline">Team Sources</span>
        <% end %>

        <% is_teams_active = controller_name == "teams" %>
        <%= link_to admin_teams_path, class: "group flex items-center gap-2 px-3 py-2 #{is_teams_active ? 'bg-yellow-50 border-yellow-600 text-yellow-700' : 'bg-white border-gray-300 text-gray-700'} hover:bg-yellow-50 hover:border-yellow-400 hover:text-yellow-700 border rounded-lg transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span class="text-sm font-medium hidden sm:inline">Teams</span>
        <% end %>

        <% is_players_active = controller_name == "players" %>
        <%= link_to admin_players_path, class: "group flex items-center gap-2 px-3 py-2 #{is_players_active ? 'bg-yellow-50 border-yellow-600 text-yellow-700' : 'bg-white border-gray-300 text-gray-700'} hover:bg-yellow-50 hover:border-yellow-400 hover:text-yellow-700 border rounded-lg transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <span class="text-sm font-medium hidden sm:inline">Players</span>
        <% end %>

        <%= link_to root_path, class: "group flex items-center gap-2 px-3 py-2 bg-white hover:bg-gray-50 border border-gray-300 hover:border-gray-400 text-gray-700 hover:text-gray-900 rounded-lg transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          <span class="text-sm font-medium hidden sm:inline">View Site</span>
        <% end %>
      </nav>
    </div>
  </div>
</header>
