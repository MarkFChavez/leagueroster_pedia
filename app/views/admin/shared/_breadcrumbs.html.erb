<% if breadcrumbs.any? %>
  <nav class="mb-6">
    <div class="bg-white shadow-sm border border-gray-200 rounded-lg px-4 py-3">
      <ol class="flex items-center space-x-2 text-sm">
        <% breadcrumbs.each_with_index do |crumb, index| %>
          <li class="flex items-center">
            <% if index > 0 %>
              <svg class="w-4 h-4 text-gray-400 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>

            <% if crumb[:path].present? %>
              <%= link_to crumb[:name], crumb[:path], class: "text-yellow-600 hover:text-yellow-700 transition-colors font-medium" %>
            <% else %>
              <span class="text-gray-600 font-medium"><%= crumb[:name] %></span>
            <% end %>
          </li>
        <% end %>
      </ol>
    </div>
  </nav>
<% end %>
