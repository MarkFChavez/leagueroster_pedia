<%= form_with(model: [:admin, team], class: "space-y-6") do |form| %>
  <% if team.errors.any? %>
    <div class="bg-red-900/30 border border-red-700/50 rounded-lg p-4 mb-6">
      <h3 class="text-red-400 font-semibold mb-2"><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h3>
      <ul class="list-disc list-inside text-red-300 space-y-1">
        <% team.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :team_source_id, "Team Source", class: "block text-sm font-semibold text-purple-400 mb-2" %>
    <%= form.collection_select :team_source_id, @team_sources, :id, :short_name, { prompt: "Select a team source" }, class: "w-full px-4 py-3 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
  </div>

  <div>
    <%= form.label :org_location, class: "block text-sm font-semibold text-purple-400 mb-2" %>
    <%= form.text_field :org_location, class: "w-full px-4 py-3 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent", placeholder: "e.g., Seoul, South Korea" %>
  </div>

  <div>
    <%= form.label :region, class: "block text-sm font-semibold text-purple-400 mb-2" %>
    <%= form.text_field :region, class: "w-full px-4 py-3 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent", placeholder: "e.g., LCK, LEC, LCS" %>
  </div>

  <div class="flex gap-3 pt-4">
    <%= form.submit class: "bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors cursor-pointer" %>
    <%= link_to "Cancel", admin_teams_path, class: "bg-gray-700 hover:bg-gray-600 text-white font-semibold py-3 px-6 rounded-lg transition-colors" %>
  </div>
<% end %>
