<div class="animate-[fadeIn_0.8s_ease-out]">
  <!-- Header Section -->
  <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-6 mb-6">
    <h2 class="text-3xl font-bold">
      <span class="bg-gradient-to-r from-blue-600 to-blue-500 bg-clip-text text-transparent">
        Team #<%= @team.id %>
      </span>
    </h2>
  </div>

  <!-- Details Section -->
  <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-6 mb-6">
    <div class="space-y-4">
      <div>
        <label class="block text-sm font-semibold text-blue-400 mb-1">Team Source</label>
        <%= link_to @team.team_source.short_name, admin_team_source_path(@team.team_source), class: "text-blue-400 hover:text-blue-300 underline text-lg" %>
        <p class="text-gray-500 text-sm mt-1"><%= @team.team_source.long_name %></p>
      </div>

      <div>
        <label class="block text-sm font-semibold text-blue-400 mb-1">Org Location</label>
        <% if @team.org_location.present? %>
          <p class="text-gray-300 text-lg"><%= @team.org_location %></p>
        <% else %>
          <p class="text-gray-600 text-lg">Not set</p>
        <% end %>
      </div>

      <div>
        <label class="block text-sm font-semibold text-blue-400 mb-1">Region</label>
        <% if @team.region.present? %>
          <p class="text-gray-300 text-lg"><%= @team.region %></p>
        <% else %>
          <p class="text-gray-600 text-lg">Not set</p>
        <% end %>
      </div>

      <div>
        <label class="block text-sm font-semibold text-blue-400 mb-1">Created At</label>
        <p class="text-gray-300"><%= @team.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>

      <div>
        <label class="block text-sm font-semibold text-blue-400 mb-1">Updated At</label>
        <p class="text-gray-300"><%= @team.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>
    </div>
  </div>

  <!-- Back Link -->
  <div>
    <%= link_to "â† Back to Teams", admin_teams_path, class: "text-blue-400 hover:text-blue-300 font-medium" %>
  </div>
</div>
