<div>
  <!-- Header Section -->
  <div class="bg-white shadow-sm border border-gray-200 rounded-lg p-6 mb-6">
    <h2 class="text-3xl font-bold text-gray-900">
      Team #<%= @team.id %>
    </h2>
  </div>

  <!-- Details Section -->
  <div class="bg-white shadow-sm border border-gray-200 rounded-lg p-6 mb-6">
    <div class="space-y-4">
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Team Source</label>
        <%= link_to @team.team_source.short_name, admin_team_source_path(@team.team_source), class: "text-yellow-600 hover:text-yellow-700 underline text-lg" %>
        <p class="text-gray-500 text-sm mt-1"><%= @team.team_source.long_name %></p>
      </div>

      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Org Location</label>
        <% if @team.org_location.present? %>
          <p class="text-gray-900 text-lg"><%= @team.org_location %></p>
        <% else %>
          <p class="text-gray-400 text-lg">Not set</p>
        <% end %>
      </div>

      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Region</label>
        <% if @team.region.present? %>
          <p class="text-gray-900 text-lg"><%= @team.region %></p>
        <% else %>
          <p class="text-gray-400 text-lg">Not set</p>
        <% end %>
      </div>

      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Created At</label>
        <p class="text-gray-900"><%= @team.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>

      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Updated At</label>
        <p class="text-gray-900"><%= @team.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>
    </div>
  </div>

  <!-- Back Link -->
  <div>
    <%= link_to "â† Back to Teams", admin_teams_path, class: "text-yellow-600 hover:text-yellow-700 font-medium" %>
  </div>
</div>
