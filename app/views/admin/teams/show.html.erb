<div class="animate-[fadeIn_0.8s_ease-out]">
  <!-- Header Section -->
  <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-6 mb-6">
    <div class="flex justify-between items-center">
      <h2 class="text-3xl font-bold">
        <span class="bg-gradient-to-r from-purple-400 to-purple-300 bg-clip-text text-transparent">
          Team #<%= @team.id %>
        </span>
      </h2>
      <div class="flex gap-3">
        <%= link_to "Edit", edit_admin_team_path(@team), class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-5 rounded-lg transition-colors" %>
        <%= button_to "Delete", admin_team_path(@team), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this team?" }, class: "bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-5 rounded-lg transition-colors" %>
      </div>
    </div>
  </div>

  <!-- Details Section -->
  <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-6 mb-6">
    <div class="space-y-4">
      <div>
        <label class="block text-sm font-semibold text-purple-400 mb-1">Team Source</label>
        <p class="text-gray-300 text-lg"><%= @team.team_source.short_name %></p>
      </div>

      <div>
        <label class="block text-sm font-semibold text-purple-400 mb-1">Org Location</label>
        <p class="text-gray-300 text-lg"><%= @team.org_location %></p>
      </div>

      <div>
        <label class="block text-sm font-semibold text-purple-400 mb-1">Region</label>
        <p class="text-gray-300 text-lg"><%= @team.region %></p>
      </div>

      <div>
        <label class="block text-sm font-semibold text-purple-400 mb-1">Created At</label>
        <p class="text-gray-300"><%= @team.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>

      <div>
        <label class="block text-sm font-semibold text-purple-400 mb-1">Updated At</label>
        <p class="text-gray-300"><%= @team.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>
    </div>
  </div>

  <!-- Back Link -->
  <div>
    <%= link_to "â† Back to Teams", admin_teams_path, class: "text-purple-400 hover:text-purple-300 font-medium" %>
  </div>
</div>
