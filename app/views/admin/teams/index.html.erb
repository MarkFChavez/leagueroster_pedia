<div>
  <!-- Header Section -->
  <div class="bg-white shadow-sm border border-gray-200 rounded-lg p-6 mb-6">
    <h2 class="text-3xl font-bold mb-2 text-gray-900">
      Teams
    </h2>
    <p class="text-gray-600">
      View team records synced from Team Sources
    </p>
  </div>

  <!-- Search Section -->
  <div class="bg-white shadow-sm border border-gray-200 rounded-lg p-4 mb-6">
    <%= form_with url: admin_teams_path, method: :get, class: "flex gap-3" do |f| %>
      <div class="flex-1">
        <%= f.text_field :q,
            value: params[:q],
            placeholder: "Search by team, location, or region...",
            class: "w-full bg-white border border-gray-300 rounded-lg px-4 py-2 text-gray-900 placeholder-gray-400 focus:outline-none focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200" %>
      </div>
      <%= f.submit "Search", class: "bg-yellow-500 hover:bg-yellow-600 text-white font-semibold px-6 rounded-lg transition-colors cursor-pointer" %>
      <% if params[:q].present? %>
        <%= link_to "Clear", admin_teams_path, class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold px-6 rounded-lg transition-colors flex items-center" %>
      <% end %>
    <% end %>
    <% if params[:q].present? %>
      <div class="text-gray-600 text-sm mt-2">
        Found <%= @teams.count %> result(s) for "<%= params[:q] %>"
      </div>
    <% end %>
  </div>

  <!-- Table Section -->
  <div class="bg-white shadow-sm border border-gray-200 rounded-lg overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">ID</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Team Name</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Org Location</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Region</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Created At</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% if @teams.any? %>
          <% @teams.each do |team| %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-6 py-4 text-gray-600 text-sm">#<%= team.id %></td>
              <td class="px-6 py-4 text-gray-900 font-medium">
                <%= link_to team.team_source.short_name, admin_team_source_path(team.team_source), class: "text-yellow-600 hover:text-yellow-700" %>
              </td>
              <td class="px-6 py-4 text-gray-900">
                <%= team.org_location.present? ? team.org_location : content_tag(:span, "-", class: "text-gray-400") %>
              </td>
              <td class="px-6 py-4 text-gray-900">
                <%= team.region.present? ? team.region : content_tag(:span, "-", class: "text-gray-400") %>
              </td>
              <td class="px-6 py-4 text-gray-600 text-sm">
                <%= time_ago_in_words(team.created_at) %> ago
              </td>
              <td class="px-6 py-4">
                <%= link_to "View", admin_team_path(team), class: "text-yellow-600 hover:text-yellow-700 font-medium" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="px-6 py-12 text-center text-gray-500">
              <p class="text-lg">No teams found</p>
              <p class="text-sm mt-2">Teams are synced from Team Sources</p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
