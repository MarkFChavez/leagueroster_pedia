<div class="animate-[fadeIn_0.8s_ease-out]">
  <!-- Header Section -->
  <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-6 mb-6">
    <div class="flex justify-between items-center">
      <div>
        <h2 class="text-3xl font-bold mb-2">
          <span class="bg-gradient-to-r from-purple-400 to-purple-300 bg-clip-text text-transparent">
            Teams
          </span>
        </h2>
        <p class="text-gray-400">
          Manage teams
        </p>
      </div>
      <%= link_to "New Team", new_admin_team_path, class: "bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors" %>
    </div>
  </div>

  <!-- Table Section -->
  <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-800/50 border-b border-gray-700/50">
        <tr>
          <th class="px-6 py-4 text-left text-xs font-semibold text-purple-400 uppercase tracking-wider">ID</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-purple-400 uppercase tracking-wider">Team Source</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-purple-400 uppercase tracking-wider">Org Location</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-purple-400 uppercase tracking-wider">Region</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-purple-400 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-700/50">
        <% if @teams.any? %>
          <% @teams.each do |team| %>
            <tr class="hover:bg-gray-800/30 transition-colors">
              <td class="px-6 py-4 text-gray-300">#<%= team.id %></td>
              <td class="px-6 py-4 text-gray-300"><%= team.team_source.short_name %></td>
              <td class="px-6 py-4 text-gray-300"><%= team.org_location %></td>
              <td class="px-6 py-4 text-gray-300"><%= team.region %></td>
              <td class="px-6 py-4">
                <div class="flex gap-2">
                  <%= link_to "View", admin_team_path(team), class: "text-purple-400 hover:text-purple-300 font-medium" %>
                  <%= link_to "Edit", edit_admin_team_path(team), class: "text-blue-400 hover:text-blue-300 font-medium" %>
                  <%= button_to "Delete", admin_team_path(team), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-400 hover:text-red-300 font-medium" %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="5" class="px-6 py-12 text-center text-gray-500">
              <p class="text-lg mb-4">No teams found</p>
              <%= link_to "Create your first team", new_admin_team_path, class: "text-purple-400 hover:text-purple-300 underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
