<div class="animate-[fadeIn_0.8s_ease-out]">
  <!-- Header Section -->
  <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-6 mb-6">
    <h2 class="text-3xl font-bold mb-2">
      <span class="bg-gradient-to-r from-blue-600 to-blue-500 bg-clip-text text-transparent">
        Teams
      </span>
    </h2>
    <p class="text-gray-400">
      View team records synced from Team Sources
    </p>
  </div>

  <!-- Search Section -->
  <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-4 mb-6">
    <%= form_with url: admin_teams_path, method: :get, class: "flex gap-3" do |f| %>
      <div class="flex-1">
        <%= f.text_field :q,
            value: params[:q],
            placeholder: "Search by team, location, or region...",
            class: "w-full bg-gray-900/50 border border-gray-700 rounded-lg px-4 py-2 text-gray-300 placeholder-gray-500 focus:outline-none focus:border-blue-700" %>
      </div>
      <%= f.submit "Search", class: "bg-blue-800 hover:bg-blue-900 text-white font-semibold px-6 rounded-lg transition-colors cursor-pointer" %>
      <% if params[:q].present? %>
        <%= link_to "Clear", admin_teams_path, class: "bg-gray-700 hover:bg-gray-600 text-white font-semibold px-6 rounded-lg transition-colors flex items-center" %>
      <% end %>
    <% end %>
    <% if params[:q].present? %>
      <div class="text-gray-400 text-sm mt-2">
        Found <%= @teams.count %> result(s) for "<%= params[:q] %>"
      </div>
    <% end %>
  </div>

  <!-- Table Section -->
  <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-800/50 border-b border-gray-700/50">
        <tr>
          <th class="px-6 py-4 text-left text-xs font-semibold text-blue-400 uppercase tracking-wider">ID</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-blue-400 uppercase tracking-wider">Team Name</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-blue-400 uppercase tracking-wider">Org Location</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-blue-400 uppercase tracking-wider">Region</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-blue-400 uppercase tracking-wider">Created At</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-blue-400 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-700/50">
        <% if @teams.any? %>
          <% @teams.each do |team| %>
            <tr class="hover:bg-gray-800/30 transition-colors">
              <td class="px-6 py-4 text-gray-400 text-sm">#<%= team.id %></td>
              <td class="px-6 py-4 text-gray-300">
                <%= link_to team.team_source.short_name, admin_team_source_path(team.team_source), class: "text-blue-400 hover:text-blue-300" %>
              </td>
              <td class="px-6 py-4 text-gray-300">
                <%= team.org_location.present? ? team.org_location : content_tag(:span, "-", class: "text-gray-600") %>
              </td>
              <td class="px-6 py-4 text-gray-300">
                <%= team.region.present? ? team.region : content_tag(:span, "-", class: "text-gray-600") %>
              </td>
              <td class="px-6 py-4 text-gray-400 text-sm">
                <%= time_ago_in_words(team.created_at) %> ago
              </td>
              <td class="px-6 py-4">
                <%= link_to "View", admin_team_path(team), class: "text-blue-400 hover:text-blue-300 font-medium" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="px-6 py-12 text-center text-gray-500">
              <p class="text-lg">No teams found</p>
              <p class="text-sm mt-2">Teams are synced from Team Sources</p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
