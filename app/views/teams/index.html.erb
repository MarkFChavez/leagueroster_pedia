<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
  <% if @teams.empty? %>
    <div class="bg-navy-800 border border-lol-gold/20 rounded-lg p-8 sm:p-12 text-center animate-[fadeIn_0.5s_ease-in-out]">
      <div class="flex justify-center mb-6">
        <svg viewBox="0 0 100 100" class="w-20 h-20 sm:w-24 sm:h-24 opacity-50" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <linearGradient id="empty-grad" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" style="stop-color:#C4A15B;stop-opacity:0.5" />
              <stop offset="100%" style="stop-color:#A88745;stop-opacity:0.5" />
            </linearGradient>
          </defs>
          <polygon points="50,5 90,27.5 90,72.5 50,95 10,72.5 10,27.5" fill="url(#empty-grad)" stroke="#C4A15B" stroke-width="2" opacity="0.5"/>
          <text x="50" y="62" text-anchor="middle" fill="#C4A15B" font-size="40" font-weight="900" opacity="0.7">?</text>
        </svg>
      </div>
      <p class="text-lg sm:text-xl text-gray-300 font-semibold">No teams data available yet</p>
    </div>
  <% else %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 sm:gap-6">
      <% @teams.each_with_index do |team, index| %>
        <%= link_to team_path(team), class: "block group opacity-0 animate-[scaleIn_0.3s_ease-out] transition-colors duration-150", style: "animation-delay: #{index * 0.05}s; animation-fill-mode: forwards;" do %>
          <div class="bg-navy-800 border border-navy-600 rounded overflow-hidden transition-colors duration-150 group-hover:border-[<%= team_region_color(team) %>] flex">
            <!-- Vertical region accent -->
            <div class="w-1.5 flex-shrink-0 transition-colors duration-150" style="background-color: <%= team_region_color(team) %>"></div>

            <!-- Card content -->
            <div class="flex-1 p-4 sm:p-6">
              <!-- Region label in corner -->
              <div class="text-[10px] font-bold uppercase tracking-widest mb-2 opacity-50" style="color: <%= team_region_color(team) %>">
                <%= team.region %>
              </div>

              <!-- Team code -->
              <h3 class="text-2xl sm:text-3xl font-black text-white mb-3 sm:mb-4 group-hover:text-lol-gold transition-colors duration-150">
                <%= team.short_name.presence || team.name %>
              </h3>

              <!-- Horizontal rule -->
              <hr class="border-navy-600 mb-3 sm:mb-4">

              <!-- Full team name -->
              <p class="text-sm sm:text-base text-gray-400 mb-2"><%= team.name %></p>

              <!-- Player count -->
              <p class="text-xs sm:text-sm text-gray-400">
                <%= pluralize(team.players.where(is_current: true).size, 'member') %>
              </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
