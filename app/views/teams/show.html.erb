<!-- Back button -->
<div class="mb-4 sm:mb-6 animate-[slideInRight_0.5s_ease-out]">
    <%= link_to root_path, class: "inline-flex items-center text-lol-gold hover:text-lol-gold-300 transition-colors duration-200 text-sm sm:text-base" do %>
      <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Back to Teams
    <% end %>
  </div>

  <!-- Team Header -->
  <div class="relative bg-gradient-to-br from-navy-700 via-navy-800 to-navy-700 rounded-lg border-2 border-lol-gold/50 shadow-[0_0_30px_rgba(196,161,91,0.4),0_10px_40px_rgba(0,0,0,0.5)] p-4 sm:p-6 lg:p-8 mb-6 sm:mb-8 animate-[fadeInUp_0.6s_ease-out] overflow-hidden">
    <!-- Gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-lol-gold/5 to-transparent opacity-50"></div>
    <div class="relative flex flex-col sm:flex-row items-center sm:items-start gap-4 sm:gap-6 z-10">
      <div class="flex-1 text-center sm:text-left">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-black text-white mb-3"><%= @team.name %></h1>
        <div class="flex flex-wrap justify-center sm:justify-start gap-3 sm:gap-4 text-gray-300">
          <div class="flex items-center text-sm sm:text-base">
            <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2 text-lol-gold flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
            <span class="truncate"><strong class="text-white">Region:</strong> <%= @team.region %></span>
          </div>

          <% if @team.short_name.present? %>
            <div class="flex items-center text-sm sm:text-base">
              <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2 text-lol-gold flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
              <span class="truncate"><strong class="text-white">Short Name:</strong> <%= @team.short_name %></span>
            </div>
          <% end %>

          <% if @team.website.present? %>
            <div class="flex items-center text-sm sm:text-base min-w-0">
              <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2 text-lol-gold flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.083 9h1.946c.089-1.546.383-2.97.837-4.118A6.004 6.004 0 004.083 9zM10 2a8 8 0 100 16 8 8 0 000-16zm0 2c-.076 0-.232.032-.465.262-.238.234-.497.623-.737 1.182-.389.907-.673 2.142-.766 3.556h3.936c-.093-1.414-.377-2.649-.766-3.556-.24-.56-.5-.948-.737-1.182C10.232 4.032 10.076 4 10 4zm3.971 5c-.089-1.546-.383-2.97-.837-4.118A6.004 6.004 0 0115.917 9h-1.946zm-2.003 2H8.032c.093 1.414.377 2.649.766 3.556.24.56.5.948.737 1.182.233.23.389.262.465.262.076 0 .232-.032.465-.262.238-.234.498-.623.737-1.182.389-.907.673-2.142.766-3.556zm1.166 4.118c.454-1.147.748-2.572.837-4.118h1.946a6.004 6.004 0 01-2.783 4.118zm-6.268 0C6.412 13.97 6.118 12.546 6.03 11H4.083a6.004 6.004 0 002.783 4.118z" clip-rule="evenodd"/>
              </svg>
              <%= link_to @team.website, @team.website, target: "_blank", class: "text-lol-gold hover:text-lol-gold-300 transition-colors duration-200 hover:underline truncate" %>
            </div>
          <% end %>
        </div>

        <% if @team.last_synced_at %>
          <p class="text-xs sm:text-sm text-gray-500 mt-3 sm:mt-4 animate-[pulse-slow_3s_ease-in-out_infinite]">
            Last updated: <%= time_ago_in_words(@team.last_synced_at) %> ago
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Current Roster -->
  <div class="bg-navy-700 rounded-lg border border-navy-600 shadow-glow-sm p-4 sm:p-6 lg:p-8 animate-[fadeInUp_0.6s_ease-out]" style="animation-delay: 0.2s; animation-fill-mode: backwards;">
    <h2 class="text-2xl sm:text-3xl font-bold text-white mb-4 sm:mb-6">Current Roster</h2>

    <% if @current_players.empty? %>
      <div class="bg-navy-800 border border-lol-gold/20 rounded-lg p-6 sm:p-8 text-center animate-[fadeIn_0.5s_ease-in-out]">
        <div class="text-5xl mb-4 opacity-50">ðŸ‘¥</div>
        <p class="text-gray-300">No roster information available for this team yet.</p>
      </div>
    <% else %>
      <div class="overflow-x-auto -mx-4 sm:mx-0 px-4 sm:px-0">
        <table class="min-w-full divide-y divide-navy-600">
          <thead class="bg-navy-800">
            <tr>
              <th scope="col" class="px-3 sm:px-4 lg:px-6 py-3 sm:py-4 text-left text-xs font-bold text-lol-gold uppercase tracking-wider whitespace-nowrap">Player</th>
              <th scope="col" class="px-3 sm:px-4 lg:px-6 py-3 sm:py-4 text-left text-xs font-bold text-lol-gold uppercase tracking-wider whitespace-nowrap">Role</th>
              <th scope="col" class="hidden sm:table-cell px-4 lg:px-6 py-3 sm:py-4 text-left text-xs font-bold text-lol-gold uppercase tracking-wider whitespace-nowrap">Real Name</th>
              <th scope="col" class="hidden md:table-cell px-4 lg:px-6 py-3 sm:py-4 text-left text-xs font-bold text-lol-gold uppercase tracking-wider whitespace-nowrap">Nationality</th>
              <th scope="col" class="hidden lg:table-cell px-6 py-4 text-left text-xs font-bold text-lol-gold uppercase tracking-wider whitespace-nowrap">Age</th>
              <th scope="col" class="hidden lg:table-cell px-6 py-4 text-left text-xs font-bold text-lol-gold uppercase tracking-wider whitespace-nowrap">Joined</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-navy-600">
            <% @current_players.each_with_index do |player, index| %>
              <tr class="hover:bg-navy-600 transition-colors duration-150 opacity-0 animate-[fadeInUp_0.4s_ease-out]" style="animation-delay: <%= 0.3 + (index * 0.1) %>s; animation-fill-mode: forwards;">
                <td class="px-3 sm:px-4 lg:px-6 py-3 sm:py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <%= player_image_tag(player, size: 'medium', css_class: 'mr-3') %>
                    <div class="text-sm sm:text-base font-bold text-white"><%= player.ign %></div>
                  </div>
                </td>
                <td class="px-3 sm:px-4 lg:px-6 py-3 sm:py-4 whitespace-nowrap text-sm text-gray-300">
                  <%= player.role || 'N/A' %>
                </td>
                <td class="hidden sm:table-cell px-4 lg:px-6 py-3 sm:py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-300"><%= player.real_name.presence || '-' %></div>
                </td>
                <td class="hidden md:table-cell px-4 lg:px-6 py-3 sm:py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-300">
                    <%= player.nationality.presence || player.country.presence || '-' %>
                  </div>
                </td>
                <td class="hidden lg:table-cell px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-300">
                    <% if player.age.present? %>
                      <%= player.age %>
                    <% elsif player.birthdate.present? %>
                      <%= ((Date.today - player.birthdate) / 365.25).to_i %>
                    <% else %>
                      -
                    <% end %>
                  </div>
                </td>
                <td class="hidden lg:table-cell px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                  <%= player.date_joined&.strftime('%b %Y') || '-' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="mt-4 sm:mt-6 text-xs sm:text-sm text-gray-400 text-center sm:text-left">
        <p><strong class="text-lol-gold"><%= pluralize(@current_players.count, 'member') %></strong> in current roster</p>
      </div>
    <% end %>
  </div>
