<footer class="relative mt-auto border-t border-gray-700/50 bg-gray-800/30 backdrop-blur-sm" style="z-index: 1;">
  <div class="w-full px-4 sm:px-6 lg:px-8 xl:px-12 2xl:px-16 py-6">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm">
      <!-- Left: Copyright -->
      <div class="text-gray-400 md:flex-1">
        <span class="bg-gradient-to-r from-lol-gold via-lol-gold-300 to-lol-gold bg-clip-text text-transparent font-semibold">
          League Rosters
        </span>
        <span class="mx-2">â€¢</span>
        <span>&copy; <%= Time.current.year %></span>
      </div>

      <!-- Center: Buy Me a Coffee -->
      <div class="flex justify-center">
        <%= link_to "https://www.buymeacoffee.com/mjfchavez", target: "_blank", rel: "noopener noreferrer",
            class: "inline-block hover:opacity-80 transition-opacity" do %>
          <img src="https://cdn.buymeacoffee.com/buttons/v2/default-yellow.png"
               alt="Buy Me A Coffee"
               class="h-10 w-auto">
        <% end %>
      </div>

      <!-- Right: Data Source Attribution -->
      <div class="text-gray-400 md:flex-1 md:text-right">
        Data sourced from
        <%= link_to "https://lol.fandom.com", target: "_blank", rel: "noopener noreferrer",
            class: "inline-flex items-center gap-1 text-lol-blue-300 hover:text-lol-blue-200 transition-colors font-medium" do %>
          Leaguepedia
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</footer>
