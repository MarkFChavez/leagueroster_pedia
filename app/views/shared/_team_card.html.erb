<%
  player_count = team.players.count
  mode = local_assigns.fetch(:mode, 'compact')
  # Prepare roster data for modal
  roster_json = team.players.map { |p| { ign: p.ign, name: p.name, role: p.role } }.to_json
  # Get team logo configuration
  logo_config = team_logo_config(team.team_source.short_name)
%>

<div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-lg p-4
            hover:border-lol-gold/50 hover:shadow-glow-sm transition-all duration-300
            group flex-shrink-0 <%= mode == 'compact' ? 'w-48' : 'w-full' %>
            flex flex-col cursor-pointer js-open-modal"
     data-team-id="<%= team.id %>"
     data-team-name="<%= team.team_source.short_name %>"
     data-team-long-name="<%= team.team_source.long_name %>"
     data-team-region="<%= team.region %>"
     data-team-roster="<%= roster_json %>">

  <!-- Team Logo Shape -->
  <div class="w-16 h-16 mx-auto mb-3 bg-gradient-to-br <%= logo_config[:gradient_from] %> <%= logo_config[:gradient_to] %>
              flex items-center justify-center shadow-glow-sm border <%= logo_config[:border_color] %>
              <%= logo_config[:hover_shadow] %> <%= logo_config[:hover_border] %> transition-all duration-300
              <%= logo_config[:shape] == 'circle' ? 'rounded-full' : '' %>"
       <% if logo_config[:clip_path].present? %>
         style="clip-path: <%= logo_config[:clip_path] %>;"
       <% end %>>
    <span class="text-xl font-black <%= logo_config[:text_color] %>">
      <%= team.team_source.short_name %>
    </span>
  </div>

  <!-- Team Name -->
  <h3 class="text-center mb-3 <%= mode == 'compact' ? 'text-base' : 'text-lg' %> font-bold">
    <span class="bg-gradient-to-r from-lol-gold via-lol-gold-300 to-lol-gold
                 bg-clip-text text-transparent group-hover:from-lol-gold-300
                 group-hover:via-lol-gold group-hover:to-lol-gold-300 transition-all duration-300">
      <%= team.team_source.long_name %>
    </span>
  </h3>

  <% if mode != 'minimal' %>
    <!-- Region Badge -->
    <div class="flex justify-center mb-3">
      <span class="inline-flex items-center px-2 py-1 rounded-full bg-lol-blue/20
                   border border-lol-blue/50 text-lol-blue-300 text-xs font-semibold">
        <%= team.region || 'N/A' %>
      </span>
    </div>

    <% if team.org_location.present? && mode == 'full' %>
      <!-- Location (only in full mode) -->
      <p class="text-center text-xs text-gray-500 mb-3">
        üìç <%= team.org_location %>
      </p>
    <% end %>

    <!-- Spacer to push player count to bottom -->
    <div class="flex-grow"></div>

    <!-- Player Count at Bottom -->
    <div class="mt-auto pt-3 border-t border-gray-700/30">
      <div class="flex items-center justify-center gap-2 text-xs text-gray-400">
        <svg class="w-4 h-4 text-lol-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <span class="font-semibold text-lol-gold"><%= player_count %></span>
        <span>player<%= player_count != 1 ? 's' : '' %></span>
      </div>
    </div>
  <% end %>
</div>
