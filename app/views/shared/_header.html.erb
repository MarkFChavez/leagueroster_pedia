<header class="mb-8 sm:mb-12 animate-[fadeInUp_0.6s_ease-out] text-center relative">
  <h1 class="text-5xl sm:text-6xl lg:text-7xl xl:text-8xl font-black mb-4 tracking-tight uppercase relative inline-block">
    <span class="bg-gradient-to-r from-lol-gold via-lol-gold-300 to-lol-gold bg-clip-text text-transparent drop-shadow-[0_0_30px_rgba(196,161,91,0.8)] animate-[glowPulse_2s_ease-in-out_infinite]">
      League Rosters
    </span>
  </h1>
  <p class="text-gray-300 text-lg sm:text-xl lg:text-2xl font-semibold uppercase tracking-widest">
    <span class="text-lol-blue drop-shadow-[0_0_15px_rgba(84,140,180,0.6)]">Professional</span>
    <span class="text-white mx-2">•</span>
    <span class="text-lol-gold drop-shadow-[0_0_15px_rgba(196,161,91,0.6)]">League of Legends</span>
    <span class="text-white mx-2">•</span>
    <span class="text-lol-blue drop-shadow-[0_0_15px_rgba(84,140,180,0.6)]">Teams & Rosters</span>
  </p>
  <!-- Decorative glow line -->
  <div class="mt-6 flex justify-center">
    <div class="h-1 w-32 sm:w-48 bg-gradient-to-r from-transparent via-lol-gold to-transparent shadow-[0_0_20px_rgba(196,161,91,0.8)] rounded-full"></div>
  </div>

  <!-- Player Search -->
  <div class="mt-8 flex justify-center"
       data-controller="search"
       data-search-url-value="<%= players_search_path %>"
       data-action="click@window->search#clickOutside keydown@window->search#handleKeydown">
    <div class="relative w-full max-w-md px-4 sm:px-0">
      <div class="relative">
        <input type="text"
               data-search-target="input"
               data-action="input->search#search"
               placeholder="Search players..."
               class="w-full px-4 py-3 pl-12 bg-gray-800 border-2 border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-gold-400 focus:ring-2 focus:ring-gold-400/50 transition-all duration-200"
               autocomplete="off">
        <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
      <div data-search-target="results" class="hidden relative"></div>
    </div>
  </div>
</header>
