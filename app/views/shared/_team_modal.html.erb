<%
  # Team Roster Quick View Modal
  # Shows roster with link to full team page
%>

<!-- Modal Backdrop -->
<div id="teamModal" class="hidden fixed inset-0 z-50 overflow-y-auto" data-controller="modal">
  <!-- Backdrop overlay -->
  <div class="fixed inset-0 bg-black/70 backdrop-blur-sm transition-opacity"
       data-action="click->modal#close"></div>

  <!-- Modal Container -->
  <div class="flex min-h-full items-center justify-center p-4">
    <!-- Modal Content -->
    <div class="relative bg-gray-900 border border-gray-700/50 rounded-lg shadow-glow-lg max-w-2xl w-full
                transform transition-all animate-[scaleIn_0.3s_ease-out]"
         data-modal-target="content">

      <!-- Header -->
      <div class="relative bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm
                  border-b border-gray-700/50 px-6 py-4 rounded-t-lg">
        <!-- Close Button -->
        <button type="button"
                class="absolute top-4 right-4 text-gray-500 hover:text-gray-300 transition-colors"
                data-action="click->modal#close">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>

        <!-- Team Info -->
        <div class="flex items-center gap-4 pr-10">
          <!-- Logo Circle -->
          <div class="w-16 h-16 rounded-full bg-gradient-to-br from-lol-gold/20 to-transparent
                      flex items-center justify-center shadow-glow-sm border border-lol-gold/30">
            <span class="text-2xl font-black text-lol-gold" data-modal-target="teamInitials">
              --
            </span>
          </div>

          <div class="flex-1 min-w-0">
            <h3 class="text-2xl font-bold truncate">
              <span class="bg-gradient-to-r from-lol-gold via-lol-gold-300 to-lol-gold bg-clip-text text-transparent"
                    data-modal-target="teamName">
                Team Name
              </span>
            </h3>
            <p class="text-sm text-gray-400 truncate" data-modal-target="teamLongName">Full Team Name</p>
            <div class="flex gap-2 mt-1">
              <span class="inline-flex items-center px-2 py-0.5 rounded-full bg-lol-blue/20
                           border border-lol-blue/50 text-lol-blue-300 text-xs font-semibold"
                    data-modal-target="teamRegion">
                Region
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Body - Roster List -->
      <div class="px-6 py-4 max-h-96 overflow-y-auto">
        <h4 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3">Roster</h4>

        <div class="space-y-2" data-modal-target="rosterList">
          <!-- Roster items will be inserted here -->
          <p class="text-gray-500 text-center py-8">Loading roster...</p>
        </div>
      </div>

      <!-- Footer -->
      <div class="px-6 py-4 bg-gray-800/30 border-t border-gray-700/50 rounded-b-lg">
        <a href="#" data-modal-target="viewFullLink"
           class="block w-full text-center px-4 py-2 bg-gradient-to-r from-lol-blue-600 to-lol-blue-500
                  hover:from-lol-blue-500 hover:to-lol-blue-600
                  text-white font-semibold rounded-lg transition-all duration-300 shadow-glow-sm
                  hover:shadow-glow">
          View Full Team Details â†’
        </a>
      </div>
    </div>
  </div>
</div>
